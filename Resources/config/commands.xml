<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Mongator\MongatorBundle\Command\GenerateCommand"
        	class="Mongator\MongatorBundle\Command\GenerateCommand">
            <argument type="service" id="mongator.mondator" />
            <argument type="service" id="mongator.generator.configmanager" />
            <argument />
            <argument type="service" id="kernel" />
            <argument />
            <argument />
            <tag name="console.command" />
        </service>
        
        <service id="Mongator\MongatorBundle\Command\LoadFixturesCommand"
        	class="Mongator\MongatorBundle\Command\LoadFixturesCommand">
            <argument type="service" id="mongator" />
            <argument type="service" id="kernel" />
            <tag name="console.command" />
        </service>
        
        <service id="Mongator\MongatorBundle\Command\EnsureIndexesCommand"
        	class="Mongator\MongatorBundle\Command\EnsureIndexesCommand">
            <argument type="service" id="mongator" />
            <tag name="console.command" />
        </service>
        
        <service id="Mongator\MongatorBundle\Command\FixMissingReferencesCommand"
        	class="Mongator\MongatorBundle\Command\FixMissingReferencesCommand">
            <argument type="service" id="mongator" />
            <tag name="console.command" />
        </service>
        
        <service id="Mongator\MongatorBundle\Command\ShowTypesCommand"
        	class="Mongator\MongatorBundle\Command\ShowTypesCommand">
            <argument type="service" id="mongator.mondator" />
            <tag name="console.command" />
        </service>
        
    </services>
</container>
